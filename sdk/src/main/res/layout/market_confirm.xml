<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_corner"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

       app:cardCornerRadius="25dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:background="@drawable/dialog_corner">

            <RelativeLayout
                android:id="@+id/confirm_title"
                android:background="@drawable/dialog_corner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                >

                <ImageButton
                    android:id="@+id/confirm_title_close"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"

                  android:background="@drawable/ic_icon_delete" />

                <TextView
                    android:id="@+id/confirm_title_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Buy"
                    android:textColor="@color/mirror_black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                     />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/mirror_filter_button_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>





            <RelativeLayout
                android:background="@drawable/dialog_corner"
                android:layout_marginTop="60dp"
                android:id="@+id/confirm_main"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:id="@+id/confirm_main_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp">
                      <androidx.cardview.widget.CardView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          app:cardCornerRadius="12dp">
                          <TextView
                              android:layout_width="80dp"
                              android:layout_height="80dp"
                              android:background="@drawable/screenshot_20220925_101323"/>
                      </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="110dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/ic_icon_solana"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="150dp"
                            android:layout_marginTop="15dp"
                            android:text="0.271"
                            android:textSize="20sp"
                            android:textColor="@color/mirror_black"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="115dp"
                            android:layout_marginTop="50dp"
                            android:text="Cost"
                            android:textSize="18sp"
                            android:textColor="@color/cardview_dark_background"
                            />

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dp"
                      app:cardCornerRadius="12dp">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:padding="15dp"
                          android:background="@color/mirror_filter_button_gray">

                          <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="20dp"
                             android:orientation="horizontal">
                             <TextView
                                 android:layout_width="20dp"
                                 android:layout_height="20dp"
                                 android:background="@drawable/rarity"/>
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_marginLeft="5dp"
                                 android:text="Rarity"
                                 android:textStyle="bold"
                                 android:layout_marginTop="1dp"/>

                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_marginLeft="215dp"
                                 android:text="Common"
                                 android:textColor="@color/mirror_black"
                                 android:layout_marginTop="1dp"/>

                         </LinearLayout>
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="20dp"
                              android:layout_marginTop="10dp"
                              android:orientation="horizontal">
                              <TextView
                                  android:layout_width="20dp"
                                  android:layout_height="20dp"
                                  android:background="@drawable/attack"/>
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="5dp"
                                  android:text="Attack"
                                  android:textStyle="bold"
                                  android:layout_marginTop="1dp"/>

                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="215dp"
                                  android:text="75"
                                  android:textColor="@color/mirror_black"
                                  android:layout_marginTop="1dp"/>

                          </LinearLayout>
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="20dp"
                              android:layout_marginTop="10dp"
                              android:orientation="horizontal">
                              <TextView
                                  android:layout_width="20dp"
                                  android:layout_height="20dp"
                                  android:background="@drawable/defence"/>
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="5dp"
                                  android:text="Defense"
                                  android:textStyle="bold"
                                  android:layout_marginTop="1dp"/>

                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="205dp"
                                  android:text="227"
                                  android:textColor="@color/mirror_black"
                                  android:layout_marginTop="1dp"/>

                          </LinearLayout>
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="20dp"
                              android:layout_marginTop="10dp"
                              android:orientation="horizontal">
                              <TextView
                                  android:layout_width="20dp"
                                  android:layout_height="20dp"
                                  android:background="@drawable/health"/>
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="5dp"
                                  android:text="Health"
                                  android:textStyle="bold"
                                  android:layout_marginTop="1dp"/>

                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="215dp"
                                  android:text="223"
                                  android:textColor="@color/mirror_black"
                                  android:layout_marginTop="1dp"/>

                          </LinearLayout>

                      </LinearLayout>

                  </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:background="@color/mirror_filter_button_gray">

                            <TextView
                                android:layout_width="350dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="Passive Skill Set"
                                android:layout_marginBottom="10dp"
                                android:textStyle="bold"
                                android:layout_marginTop="1dp"/>
                            <androidx.cardview.widget.CardView
                              android:layout_width="wrap_content"
                              android:layout_height="30dp"
                              app:cardCornerRadius="12dp"
                            >

                              <TextView
                                  android:padding="5dp"
                                  android:layout_width="wrap_content"
                                  android:background="@color/mirror_font_blue_light"
                                  android:layout_height="30dp"
                                  android:textColor="@color/mirror_font_blue"
                                  android:text="GravitationalShatter"
                                  android:textStyle="bold"
                                 />

                          </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                app:cardCornerRadius="12dp"
                                >

                                <TextView
                                    android:padding="5dp"
                                    android:layout_width="wrap_content"
                                    android:background="@color/mirror_font_blue_light"
                                    android:layout_height="30dp"
                                    android:textColor="@color/mirror_font_blue"
                                    android:text="GravitationalSuperession"
                                    android:textStyle="bold"
                                    />

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                app:cardCornerRadius="12dp"
                                >

                                <TextView
                                    android:padding="5dp"
                                    android:layout_width="wrap_content"
                                    android:background="@color/mirror_font_blue_light"
                                    android:layout_height="30dp"
                                    android:textColor="@color/mirror_font_blue"
                                    android:text="GravitationalShatter"
                                    android:textStyle="bold"
                                    />


                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>




                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/dialog_corner"
                android:layout_marginTop="60dp"
                android:id="@+id/confirm_waitting"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:visibility="gone"
                >

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                   />
            </RelativeLayout>


            <RelativeLayout

                android:id="@+id/confirm_success"
                android:layout_width="match_parent"
                android:layout_marginTop="60dp"
                android:layout_height="480dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:id="@+id/sucess_icon"
                    android:background="@drawable/ic_success_pic"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                   android:layout_below="@+id/sucess_icon"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/mirror_black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Congradulations!
Purchase Successful"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/confirm_fail"
                android:layout_width="match_parent"
                android:layout_marginTop="60dp"
                android:layout_height="480dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:id="@+id/fail_icon"
                    android:background="@drawable/ic_wrong_pic"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/fail_icon"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/mirror_black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Ops!
please try again!"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/confirm_not_found"
                android:layout_width="match_parent"
                android:layout_marginTop="60dp"
                android:layout_height="480dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:id="@+id/not_found_icon"
                    android:background="@drawable/ic_wrong_pic"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/not_found_icon"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/mirror_black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Insufficient found"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/reference"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="480dp">
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/confirm_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_below="@+id/reference"
                >

               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="60dp"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="30dp"
                   app:cardCornerRadius="20dp">
                   <Button
                       android:id="@+id/confirm_button_button"
                       android:layout_width="match_parent"
                       android:layout_height="60dp"
                       android:text="Buy"
                       android:textColor="@color/mirror_pure_white"
                       android:background="@color/mirror_font_blue"
                      />
               </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>

